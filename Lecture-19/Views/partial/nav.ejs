<header class="bg-red-600 text-white shadow-lg sticky top-0 z-50">
  <nav class="container mx-auto px-4 py-3 flex justify-between items-center">
    <!-- Logo -->
    <a href="/" class="text-2xl font-bold tracking-tight">Airbnb</a>

    <!-- Hamburger Button for Mobile -->
    <button id="menu-toggle" class="md:hidden focus:outline-none">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    </button>

    <!-- Navigation Links -->
    <ul id="nav-menu" class="hidden md:flex md:items-center md:space-x-6">
      <% if(isLoggedIn) { %>
        <li>
          <a href="/homes" class="<%= currentPage==='Home' ? 'bg-red-700' : 'hover:bg-red-700' %> py-2 px-4 rounded-lg transition duration-300 ease-in-out">Home-List</a>
        </li>
        <li>
          <a href="/bookings" class="<%= currentPage==='bookings' ? 'bg-red-700' : 'hover:bg-red-700' %> py-2 px-4 rounded-lg transition duration-300 ease-in-out">Bookings</a>
        </li>
        <li>
          <a href="/favourites" class="<%= currentPage==='favourite' ? 'bg-red-700' : 'hover:bg-red-700' %> py-2 px-4 rounded-lg transition duration-300 ease-in-out">Favourite</a>
        </li>
        <li>
          <a href="/host/host-home-list" class="<%= currentPage==='host-homes' ? 'bg-red-700' : 'hover:bg-red-700' %> py-2 px-4 rounded-lg transition duration-300 ease-in-out">Host-Homes</a>
        </li>
        <li>
          <a href="/host/add-home" class="<%= currentPage==='addHome' ? 'bg-red-700' : 'hover:bg-red-700' %> py-2 px-4 rounded-lg transition duration-300 ease-in-out">Add Home</a>
        </li>
      <% } %>

      <% if(!isLoggedIn) { %>
        <li>
          <a href="/signup" class="hover:bg-red-700 py-2 px-4 rounded-lg transition duration-300 ease-in-out">SignUp</a>
        </li>
        <li>
          <a href="/login" class="hover:bg-red-700 py-2 px-4 rounded-lg transition duration-300 ease-in-out">Login</a>
        </li>
      <% } else { %>
        <li>
          <form action="/logout" method="POST">
            <button type="submit" class="hover:bg-red-700 py-2 px-4 rounded-lg transition duration-300 ease-in-out">Logout</button>
          </form>
        </li>
      <% } %>
    </ul>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-red-600">
    <ul class="flex flex-col items-center space-y-4 py-4">
      <% if(isLoggedIn) { %>
        <li>
          <a href="/homes" class="<%= currentPage==='Home' ? 'bg-red-700' : 'hover:bg-red-700' %> w-full text-center py-2 px-4 rounded-lg transition duration-300 ease-in-out">Home-List</a>
        </li>
        <li>
          <a href="/bookings" class="<%= currentPage==='bookings' ? 'bg-red-700' : 'hover:bg-red-700' %> w-full text-center py-2 px-4 rounded-lg transition duration-300 ease-in-out">Bookings</a>
        </li>
        <li>
          <a href="/favourites" class="<%= currentPage==='favourite' ? 'bg-red-700' : 'hover:bg-red-700' %> w-full text-center py-2 px-4 rounded-lg transition duration-300 ease-in-out">Favourite</a>
        </li>
        <li>
          <a href="/host/host-home-list" class="<%= currentPage==='host-homes' ? 'bg-red-700' : 'hover:bg-red-700' %> w-full text-center py-2 px-4 rounded-lg transition duration-300 ease-in-out">Host-Homes</a>
        </li>
        <li>
          <a href="/host/add-home" class="<%= currentPage==='addHome' ? 'bg-red-700' : 'hover:bg-red-700' %> w-full text-center py-2 px-4 rounded-lg transition duration-300 ease-in-out">Add Home</a>
        </li>
      <% } %>

      <% if(!isLoggedIn) { %>
        <li>
          <a href="/signup" class="hover:bg-red-700 w-full text-center py-2 px-4 rounded-lg transition duration-300 ease-in-out">SignUp</a>
        </li>
        <li>
          <a href="/login" class="hover:bg-red-700 w-full text-center py-2 px-4 rounded-lg transition duration-300 ease-in-out">Login</a>
        </li>
      <% } else { %>
        <li>
          <form action="/logout" method="POST" class="w-full">
            <button type="submit" class="hover:bg-red-700 w-full text-center py-2 px-4 rounded-lg transition duration-300 ease-in-out">Logout</button>
          </form>
        </li>
      <% } %>
    </ul>
  </div>
</header>

<script>
  document.getElementById('menu-toggle').addEventListener('click', () => {
    const mobileMenu = document.getElementById('mobile-menu');
    mobileMenu.classList.toggle('hidden');
  });
</script>